#!/bin/bash

cd "$(dirname "$0")"

source includes/projects

print_usage() {
    echo "ðŸ’€ $1"
    echo "Help below ðŸ‘‡"
    echo ""
    echo "Runs the given project. Will only work after performing a ./build."
    echo ""
    echo "Usage: ./run <project>"
