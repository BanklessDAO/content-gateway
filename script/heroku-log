#!/bin/bash

print_usage() {
    echo "ðŸ’€ $1"
    echo "Help below ðŸ‘‡"
    echo ""
    echo "Shows the Heroku logs for the given project"
    echo ""
    echo "Usage: ./heroku-log <project>"
    echo "Supported projects: cga, cgl"
